rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@rechargearth.com';
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Products - Public read, admin-only write
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Pledges - Anonymous users can create (with rate limiting), authenticated read, admin manage
    match /pledges/{pledgeId} {
      allow create: if 
        request.resource.data.firstName != null &&
        request.resource.data.lastName != null &&
        request.resource.data.email != null &&
        request.resource.data.phone != null &&
        request.resource.data.birthday != null;
      allow read: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // Orders - Anonymous users can create, users can read their own, admin can read all
    match /orders/{orderId} {
      allow create: if 
        request.resource.data.customer != null &&
        request.resource.data.customer.email != null &&
        request.resource.data.pricing != null &&
        request.resource.data.pricing.total != null;
      allow read: if isAdmin() || 
                  (isAuthenticated() && resource.data.customer.email == request.auth.token.email);
      allow update, delete: if isAdmin();
    }
    
    // Mail queue for email trigger extension
    match /mail/{mailId} {
      allow create: if 
        request.resource.data.to != null &&
        request.resource.data.message != null;
      allow read, update, delete: if isAdmin(); // Only admin can manage
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

